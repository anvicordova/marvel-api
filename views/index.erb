<!DOCTYPE html>
<html>

  <head>
    <link rel="stylesheet" type="text/css" href="/style.css" />
  </head>

  <body>
    <div id="stories">
      <h1><%= @story[:character].name %></h1>
      <p><%= @story[:character].description %></p>
      <div>
        <img src="<%= @story[:character].thumbnail_url%>" />
      </div>
    </div>
    <div id="characters">
      <h2><%= @story[:story].title %></h2>
      <p><%= @story[:story].description %></p>
      <ul>
        <% @story[:characters].each do |character| %>
          <li>
            <div>
              <%= character.name %>
              <div>
                <img src="<%= character.thumbnail_url%>" />
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </body>
</html>
